<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    let editRowIndex = null;

    $(document).ready(function () {

        $('#entryForm').on('submit', function (e) {
            e.preventDefault();

            const mode = $('#mode').val();
            const bags = parseInt($('#bags').val()) || 0;
            const oil = parseFloat($('#oil').val()) || 0;
            let rate, condition;

            if (mode === 'condition') {
                condition = parseFloat($('#condition').val());
                rate = oil > 0 ? ((condition / 42) * oil).toFixed(2) : "0.00";
            } else if (mode === 'price') {
                rate = parseFloat($('#rate').val());
                condition = oil > 0 ? ((rate / oil) * 42).toFixed(2) : "0.00";
            } else {
                rate = parseFloat($('#rate').val());
                condition = "0.00";
            }

            const weight = (bags * 0.5).toFixed(2);
            const amount = (weight * rate).toFixed(2);

            if (editRowIndex !== null) {
                const row = $('#dataTable tr').eq(editRowIndex);
                row.find('td').eq(1).text(bags);
                row.find('td').eq(2).text(rate);
                row.find('td').eq(3).text(oil);
                row.find('td').eq(4).text(condition);
                row.find('td').eq(5).text(weight);
                row.find('td').eq(6).text(amount);
                editRowIndex = null;
            } else {
                const rowCount = $('#dataTable tr').filter(function () {
                    return !$(this).attr('id') && $(this).find('td').length > 0;
                }).length - 6;

                const newRow = `
            <tr>
                <td>${rowCount}</td>
                <td>${bags}</td>
                <td>${rate}</td>
                <td>${oil}</td>
                <td>${condition}</td>
                <td>${weight}</td>
                <td>${amount}</td>
                <td class="no-print">
                    <button class="edit-btn">Edit</button>
                    <button class="delete-btn" style="margin-left: 1px; background-color: red; color: white;">Delete</button>
                </td>
            </tr>
        `;
                $('#totalsRow').before(newRow);
            }

            updateTotals();
            adjustTableColumns(); // Ensure columns formatting is correct for the new row
            this.reset();
        });


        $('#dataTable').on('click', '.edit-btn', function () {
            const row = $(this).closest('tr');
            editRowIndex = row.index();
            const cells = row.find('td');
            $('#rate').val(cells.eq(2).text());
            $('#oil').val(cells.eq(3).text());
            $('#bags').val(cells.eq(1).text());

        });

        $('#dataTable').on('click', '.delete-btn', function () {
            $(this).closest('tr').remove();
            renumberRows();
            updateTotals();
        });

        $('#partySelect').on('input', function () {
            const partyName = $(this).val().trim();
            $('#partyNameDisplay').text(partyName || "");
        });

        $('#majdur, #muddat, #muddatType, #other').on('input change', updateTotals);
    });

    function toggleInputFields() {
        const mode = $('#mode').val();

        // Clear values when switching mode
        $('#rate').val('');
        $('#condition').val('');
        $('#oil').val(''); // Also clear oil

        if (mode === 'condition') {
            $('#pageHeading').text('Roshanlal Kedarnath Mandawar (Mustard-Condition)');
            $('#condition').show().prop('required', true);
            $('#rate').hide().prop('required', false);
            $('#oil').show().prop('required', true);
        } else if (mode === 'price') {
            $('#pageHeading').text('Roshanlal Kedarnath Mandawar (Mustard-Price)');
            $('#rate').show().prop('required', true);
            $('#condition').hide().prop('required', false);
            $('#oil').show().prop('required', true);
        } else {
            $('#pageHeading').text('Roshanlal Kedarnath Mandawar (Mustard New)');
            $('#rate').show().prop('required', true);
            $('#condition').hide().prop('required', false);
            $('#oil').hide().prop('required', false);
        }
        clearDataRows();
        adjustTableColumns();
    }

    function adjustTableColumns() {
        const mode = $('#mode').val();
        if (mode === 'new') {
            // Hide table columns
            $('#dataTable th:nth-child(4), #dataTable td:nth-child(4)').hide(); // Oil
            $('#dataTable th:nth-child(5), #dataTable td:nth-child(5)').hide(); // Condition
            // Adjust colspan for fewer columns
            $('#dataTable td[colspan]').attr('colspan', 4);
        } else {
            // Show table columns
            $('#dataTable th:nth-child(4), #dataTable td:nth-child(4)').show(); // Oil
            $('#dataTable th:nth-child(5), #dataTable td:nth-child(5)').show(); // Condition
            // Reset colspan
            $('#dataTable td[colspan]').attr('colspan', 6);
        }
    }

    function clearDataRows() {
        $('#dataTable tr').each(function () {
            const $row = $(this);
            if ($row.find('td').length === 0) return; // Skip header

            const firstCellText = $row.find('td').eq(0).text().trim().toLowerCase();
            const isSummaryRow = $row.attr('id') === 'totalsRow' ||
                firstCellText.includes('total') ||
                firstCellText.includes('mandi') ||
                firstCellText.includes('majduri') ||
                firstCellText.includes('muddat') ||
                firstCellText.includes('gst') ||
                firstCellText.includes('other') ||
                firstCellText.includes('grand');

            if (!isSummaryRow) {
                $row.remove();
            }
        });
        updateTotals();
    }


    $(document).ready(function () {
        toggleInputFields(); // initial check
        $('#mode').on('change', toggleInputFields);
    });


    function renumberRows() {
        let serial = 0;

        $('#dataTable tr').each(function () {
            const $row = $(this);
            const firstCellText = $row.find('td').eq(0).text().trim().toLowerCase();


            const isSummaryRow = $row.attr('id') === 'totalsRow' ||
                firstCellText.includes('total') ||
                firstCellText.includes('mandi') ||
                firstCellText.includes('majduri') ||
                firstCellText.includes('muddat') ||
                firstCellText.includes('gst') ||
                firstCellText.includes('other') ||
                firstCellText.includes('grand');

            if (isSummaryRow) return;

            // Update serial number in first cell
            $row.find('td').eq(0).text(serial++);
        });
    }


    function updateTotals() {
        let totalBags = 0;
        let totalWeight = 0;
        let totalAmount = 0;
        let weightedRateSum = 0;
        let weightedOilSum = 0;
        let weightedConditionSum = 0;

        $('#dataTable tr').each(function () {
            const firstCell = $(this).find('td').eq(0).text().trim().toLowerCase();

            const isSummary =
                $(this).attr('id') === 'totalsRow' ||
                firstCell.includes('total') ||
                firstCell.includes('mandi') ||
                firstCell.includes('majduri') ||
                firstCell.includes('muddat') ||
                firstCell.includes('other') ||
                firstCell.includes('gst') ||
                firstCell.includes('grand');

            if (isSummary) return;

            const cells = $(this).find('td');
            if (cells.length < 7) return;

            const bags = parseFloat(cells.eq(1).text()) || 0;
            const rate = parseFloat(cells.eq(2).text()) || 0;
            const oil = parseFloat(cells.eq(3).text()) || 0;
            const condition = parseFloat(cells.eq(4).text()) || 0;
            const weight = parseFloat(cells.eq(5).text()) || 0;
            const amount = parseFloat(cells.eq(6).text()) || 0;

            totalBags += bags;
            totalWeight += weight;
            totalAmount += amount;
            weightedRateSum += rate * bags;
            weightedOilSum += oil * bags;
            weightedConditionSum += condition * bags;
        });

        const mandiPercent = 3.75;
        const majdur = parseFloat($('#majdur').val()) || 0;
        const other = parseFloat($('#other').val()) || 0;
        // const muddat = parseFloat($('#muddat').val()) || 0;
        const mandiAmount = (totalAmount * (mandiPercent / 100));
        const muddatValue = parseFloat($('#muddat').val()) || 0;
        const muddatType = $('#muddatType').val();

        let muddat = 0;
        if (muddatType === 'percent') {
            // Calculate % of base total
            muddat = (totalAmount) * (muddatValue / 100);
        } else {
            // Fixed value
            muddat = muddatValue;
        }
        const Total = totalAmount + mandiAmount + majdur + muddat + other;
        const gst = Total * 0.05;
        const grandTotal = Total + gst;

        $('#totalBags').text(totalBags.toFixed(2));
        $('#totalWeight').text(totalWeight.toFixed(2));
        $('#totalAmount').text(totalAmount.toFixed(2));
        $('#weightedRate').text(totalBags > 0 ? (weightedRateSum / totalBags).toFixed(2) : "0.00");
        $('#weightedOil').text(totalBags > 0 ? (weightedOilSum / totalBags).toFixed(2) : "0.00");
        $('#weightedCondition').text(totalBags > 0 ? (weightedConditionSum / totalBags).toFixed(2) : "0.00");

        $('#mandiAmount').text(mandiAmount.toFixed(2));
        $('#majdurAmount').text(majdur.toFixed(2));
        $('#muddatAmount').text(muddat.toFixed(2));
        $('#others').text(other.toFixed(2));
        $('#Total').text(Total.toFixed(2));
        $('#gstAmount').text(gst.toFixed(2));
        $('#grandTotal').text(grandTotal.toFixed(2));

        // Update the readonly mandi field
        $('#mandi').val(mandiAmount.toFixed(2));
    }

</script>

